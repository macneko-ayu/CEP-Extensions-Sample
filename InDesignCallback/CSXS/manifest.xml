    <ExtensionList>
        <Extension Id="com.macneko.indesignCallback" Version="1.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
             <Host Name="IDSN" Version="9.0" />
        </HostList>
        <LocaleList>
