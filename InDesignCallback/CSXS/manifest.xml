                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>IndesignCallback</Menu>
                    <Geometry>
                        <Size>
                            <Height>200</Height>
                            <Width>300</Width>
